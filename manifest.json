{
  "manifest_version": 3,
  "name": "TuaMarca.com - Extension Security Checker",
  "version": "1.0.0",
  "description": "Verifica extensões instaladas contra listas de extensões maliciosas",
  "permissions": [
    "management",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "settings.html"
}